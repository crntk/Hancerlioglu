@{
    ViewData["Title"] = "Künefe Çeşitleri - HANÇERLİOĞLU";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #fff8f0;
        font-family: 'Poppins', sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, rgba(255, 100, 0, 0.1) 0%, rgba(255, 140, 0, 0.1) 100%);
        padding: 50px 0;
        margin-bottom: 50px;
        border-bottom: 3px solid rgba(255, 100, 0, 0.3);
        animation: fadeIn 0.8s ease;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-weight: 800;
        font-size: 3.5rem;
        text-align: center;
        color: #d2691e;
        margin-bottom: 20px;
        position: relative;
        animation: slideDown 0.8s ease;
    }

        .page-title::after {
            content: '🔥';
            margin-left: 15px;
        }

    .page-subtitle {
        text-align: center;
        font-size: 1.2rem;
        color: #8b4513;
        font-weight: 500;
        margin-bottom: 20px;
        animation: fadeIn 1s ease;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #d2691e 0%, #ff8c00 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 5px 20px rgba(210, 105, 30, 0.3);
        border: none;
        font-size: 1rem;
    }

        .back-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(210, 105, 30, 0.4);
            background: linear-gradient(135deg, #ff8c00 0%, #d2691e 100%);
            color: white;
        }

        .back-button::before {
            content: '←';
            font-size: 1.2rem;
            transition: transform 0.3s ease;
        }

        .back-button:hover::before {
            transform: translateX(-5px);
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Künefe Kartları - Özel Tasarım */
    .kunefe-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .kunefe-card {
        position: relative;
        border-radius: 25px;
        overflow: hidden;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
        animation: fadeInUp 0.8s ease backwards;
    }

        .kunefe-card:nth-child(1) {
            animation-delay: 0.2s;
        }

        .kunefe-card:nth-child(2) {
            animation-delay: 0.4s;
        }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .kunefe-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 20px 60px rgba(210, 105, 30, 0.3);
    }

    .kunefe-img-container {
        position: relative;
        overflow: hidden;
        height: 400px;
    }

    .kunefe-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .kunefe-card:hover .kunefe-img {
        transform: scale(1.12) rotate(1deg);
    }

    /* Sıcak Efekti */
    .hot-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at center, rgba(255, 100, 0, 0) 0%, rgba(255, 100, 0, 0.3) 100%);
        opacity: 0;
        transition: opacity 0.5s ease;
        animation: hotPulse 2s ease-in-out infinite;
    }

    @@keyframes hotPulse {
        0%, 100%

    {
        background: radial-gradient(circle at center, rgba(255, 100, 0, 0) 0%, rgba(255, 100, 0, 0.3) 100%);
    }

    50% {
        background: radial-gradient(circle at center, rgba(255, 100, 0, 0) 0%, rgba(255, 140, 0, 0.4) 100%);
    }

    }

    .kunefe-card:hover .hot-overlay {
        opacity: 1;
    }

    .hot-badge {
        position: absolute;
        top: 20px;
        left: 20px;
        background: linear-gradient(135deg, #ff4500 0%, #ff6347 100%);
        color: white;
        padding: 10px 25px;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        z-index: 10;
        box-shadow: 0 5px 20px rgba(255, 69, 0, 0.4);
        animation: hotBadge 1.5s ease-in-out infinite;
    }

    @@keyframes hotBadge {
        0%, 100%

    {
        transform: scale(1);
        box-shadow: 0 5px 20px rgba(255, 69, 0, 0.4);
    }

    50% {
        transform: scale(1.05);
        box-shadow: 0 8px 30px rgba(255, 69, 0, 0.6);
    }

    }

    .kunefe-content {
        padding: 35px;
        background: linear-gradient(to bottom, white 0%, rgba(255, 248, 240, 0.5) 100%);
    }

    .kunefe-title {
        font-size: 2rem;
        font-weight: 800;
        color: #d2691e;
        margin-bottom: 15px;
        transition: color 0.3s ease;
    }

    .kunefe-card:hover .kunefe-title {
        color: #ff8c00;
    }

    .kunefe-description {
        font-size: 1.05rem;
        color: #6b3e26;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    .kunefe-features {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .feature-tag {
        background: rgba(210, 105, 30, 0.1);
        color: #d2691e;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        border: 2px solid rgba(210, 105, 30, 0.2);
    }

    .price-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 20px;
        border-top: 2px solid rgba(210, 105, 30, 0.2);
    }

    .price-badge {
        display: inline-block;
        padding: 15px 40px;
        border-radius: 30px;
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
        box-shadow: 0 5px 20px rgba(40, 167, 69, 0.3);
        transition: all 0.3s ease;
    }

        .price-badge.premium {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
            color: #333;
        }

    .kunefe-card:hover .price-badge {
        transform: scale(1.1);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title

    {
        font-size: 2.5rem;
    }

    .page-header {
        padding: 35px 0;
        margin-bottom: 35px;
    }

    .kunefe-img-container {
        height: 300px;
    }

    .kunefe-title {
        font-size: 1.6rem;
    }

    .kunefe-content {
        padding: 25px;
    }

    .price-badge {
        font-size: 1.3rem;
        padding: 12px 30px;
    }

    }

    @@media (max-width: 576px) {
        .page-title

    {
        font-size: 2rem;
    }

    .kunefe-img-container {
        height: 250px;
    }

    .kunefe-title {
        font-size: 1.4rem;
    }

    .kunefe-description {
        font-size: 0.95rem;
    }

    .kunefe-content {
        padding: 20px;
    }

    .back-button {
        padding: 10px 25px;
        font-size: 0.95rem;
    }

    .price-badge {
        font-size: 1.2rem;
        padding: 10px 25px;
    }

    }
</style>

<div class="page-header">
    <div class="container">
        <h1 class="page-title">Künefe Çeşitleri</h1>
        <p class="page-subtitle">Sıcak Servis - Tel Kadayıf Lezzeti</p>
        <div class="text-center">
            <a href="/Home/Index" class="back-button">Ana Menüye Dön</a>
        </div>
    </div>
</div>

<div class="container kunefe-container mb-5">
    <div class="row g-4 justify-content-center">

        <!-- Klasik Künefe -->
        <div class="col-12">
            <div class="kunefe-card">
                <span class="hot-badge">🔥 SICAK SERVİS</span>
                <div class="kunefe-img-container">
                    <img src="https://images.unsplash.com/photo-1559734840-f9509ee495a0" class="kunefe-img" alt="Klasik Künefe">
                    <div class="hot-overlay"></div>
                </div>
                <div class="kunefe-content">
                    <h5 class="kunefe-title">Klasik Künefe</h5>
                    <p class="kunefe-description">
                        Geleneksel tarifiyle hazırlanan, ince tel kadayıfın içine özel tuzlu peynir konularak
                        sıcak fırında pişirilen ve üzerine bol şerbet dökülen efsane lezzet. Sıcak servis edilir.
                    </p>
                    <div class="kunefe-features">
                        <span class="feature-tag">🧀 Özel Peynir</span>
                        <span class="feature-tag">🍯 Taze Şerbet</span>
                        <span class="feature-tag">🔥 Sıcak Servis</span>
                        <span class="feature-tag">⭐ En Popüler</span>
                    </div>
                    <div class="price-container">
                        <span class="price-badge">220 ₺</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hasır Künefe -->
        <div class="col-12">
            <div class="kunefe-card">
                <span class="hot-badge">🔥 ÖZEL TARİF</span>
                <div class="kunefe-img-container">
                    <img src="https://images.unsplash.com/photo-1659120375148-1558e093d455" class="kunefe-img" alt="Hasır Künefe">
                    <div class="hot-overlay"></div>
                </div>
                <div class="kunefe-content">
                    <h5 class="kunefe-title">Hasır Künefe</h5>
                    <p class="kunefe-description">
                        Özel hasır tekniği ile hazırlanan, daha ince ve çıtır bir dokuya sahip künefe çeşidimiz.
                        Tel kadayıf katmanları arasında eritilmiş peynir ve üzerinde antep fıstığı ile servis edilir.
                    </p>
                    <div class="kunefe-features">
                        <span class="feature-tag">✨ Hasır Teknik</span>
                        <span class="feature-tag">🥜 Antep Fıstığı</span>
                        <span class="feature-tag">🔥 Ekstra Çıtır</span>
                        <span class="feature-tag">💎 Premium</span>
                    </div>
                    <div class="price-container">
                        <span class="price-badge premium">280 ₺</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>