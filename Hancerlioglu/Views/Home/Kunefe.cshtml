@{
 ViewData["Title"] = "Künefe Çeşitleri - HANÇERLİOĞLU";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">

<style>
body {
      background-color: #e8dfd2;
        font-family: 'Poppins', sans-serif;
    }

    .page-header {
 background: linear-gradient(135deg, rgba(232, 223, 210, 0.5) 0%, rgba(245, 237, 225, 0.5) 100%);
        padding: 50px 0;
    margin-bottom: 50px;
        border-bottom: 3px solid rgba(212, 165, 116, 0.3);
animation: fadeIn 0.8s ease;
    }

  .page-title {
        font-family: 'Playfair Display', serif;
        font-weight: 800;
        font-size: 3.5rem;
    text-align: center;
        color: #8b7355;
    margin-bottom: 20px;
        position: relative;
  animation: slideDown 0.8s ease;
        display: flex;
      align-items: center;
    justify-content: center;
        gap: 15px;
    }

    .page-title i {
        color: #d4a574;
        font-size: 3rem;
  animation: fireFlicker 1.5s ease-in-out infinite;
 }

    @@keyframes fireFlicker {
   0%, 100% { 
            transform: scale(1) rotate(0deg);
   opacity: 1;
        }
        50% { 
            transform: scale(1.1) rotate(-5deg);
       opacity: 0.9;
   }
    }

    .page-subtitle {
 text-align: center;
        font-size: 1.2rem;
        color: #8b7355;
        font-weight: 500;
  margin-bottom: 20px;
        animation: fadeIn 1s ease;
    }

    .back-button {
        display: inline-flex;
 align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #8b7355 0%, #d4a574 100%);
        color: white;
        padding: 12px 30px;
 border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 5px 20px rgba(139, 115, 85, 0.3);
        border: none;
 font-size: 1rem;
    }

    .back-button:hover {
    transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(139, 115, 85, 0.4);
        background: linear-gradient(135deg, #d4a574 0%, #8b7355 100%);
        color: white;
    }

    .back-button i {
    font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    .back-button:hover i {
        transform: translateX(-5px);
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes slideDown {
        from { 
    opacity: 0; 
  transform: translateY(-30px); 
   }
        to { 
        opacity: 1; 
 transform: translateY(0); 
        }
    }

    /* Künefe Kartları - Özel Tasarım */
    .kunefe-container {
   max-width: 1000px;
        margin: 0 auto;
  }

    .kunefe-card {
      position: relative;
        border-radius: 25px;
     overflow: hidden;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
    border: none;
        box-shadow: 0 10px 40px rgba(139, 115, 85, 0.1);
        margin-bottom: 40px;
        animation: fadeInUp 0.8s ease backwards;
    }

    .kunefe-card:nth-child(1) { animation-delay: 0.2s; }
    .kunefe-card:nth-child(2) { animation-delay: 0.4s; }

    @@keyframes fadeInUp {
        from { 
          opacity: 0; 
            transform: translateY(40px); 
        }
    to { 
            opacity: 1; 
  transform: translateY(0); 
     }
    }

    .kunefe-card:hover {
     transform: translateY(-15px) scale(1.02);
        box-shadow: 0 20px 60px rgba(139, 115, 85, 0.3);
    }

    .kunefe-img-container {
        position: relative;
        overflow: hidden;
        height: 400px;
    }

    .kunefe-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .kunefe-card:hover .kunefe-img {
   transform: scale(1.12) rotate(1deg);
    }

    /* Sıcak Efekti - Ana Sayfa Teması */
    .hot-overlay {
        position: absolute;
        top: 0;
     left: 0;
   right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(212, 165, 116, 0) 0%, rgba(212, 165, 116, 0.3) 100%);
  opacity: 0;
        transition: opacity 0.5s ease;
        animation: hotPulse 2s ease-in-out infinite;
    }

    @@keyframes hotPulse {
        0%, 100% {
  background: radial-gradient(circle at center, rgba(212, 165, 116, 0) 0%, rgba(212, 165, 116, 0.3) 100%);
     }
        50% {
            background: radial-gradient(circle at center, rgba(212, 165, 116, 0) 0%, rgba(166, 137, 104, 0.4) 100%);
   }
    }

    .kunefe-card:hover .hot-overlay {
 opacity: 1;
    }

    .hot-badge {
   position: absolute;
        top: 20px;
        left: 20px;
  background: linear-gradient(135deg, #d4a574 0%, #c49e26 100%);
        color: white;
        padding: 10px 25px;
   border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        z-index: 10;
        box-shadow: 0 5px 20px rgba(212, 165, 116, 0.4);
        animation: hotBadge 1.5s ease-in-out infinite;
  display: flex;
        align-items: center;
        gap: 8px;
    }

    .hot-badge i {
        font-size: 1.1rem;
    }

    @@keyframes hotBadge {
        0%, 100% {
    transform: scale(1);
            box-shadow: 0 5px 20px rgba(212, 165, 116, 0.4);
        }
 50% {
   transform: scale(1.05);
            box-shadow: 0 8px 30px rgba(212, 165, 116, 0.6);
        }
    }

    .kunefe-content {
 padding: 35px;
        background: linear-gradient(to bottom, white 0%, rgba(245, 237, 225, 0.5) 100%);
    }

    .kunefe-title {
        font-size: 2rem;
        font-weight: 800;
        color: #8b7355;
    margin-bottom: 15px;
     transition: color 0.3s ease;
    }

    .kunefe-card:hover .kunefe-title {
        color: #d4a574;
    }

    .kunefe-description {
    font-size: 1.05rem;
        color: #6b5d4f;
 line-height: 1.7;
      margin-bottom: 20px;
    }

    .kunefe-features {
 display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .feature-tag {
        background: rgba(212, 165, 116, 0.1);
        color: #8b7355;
  padding: 8px 16px;
   border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        border: 2px solid rgba(212, 165, 116, 0.2);
        display: flex;
align-items: center;
   gap: 8px;
        transition: all 0.3s ease;
    }

    .feature-tag:hover {
        background: rgba(212, 165, 116, 0.2);
        transform: translateY(-2px);
    }

    .feature-tag i {
        font-size: 1rem;
        color: #d4a574;
    }

    .price-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 20px;
        border-top: 2px solid rgba(212, 165, 116, 0.2);
    }

    .price-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 15px 40px;
        border-radius: 30px;
        font-size: 1.5rem;
     font-weight: 800;
        color: white;
        background: linear-gradient(135deg, #8b7355 0%, #6b5d4f 100%);
        box-shadow: 0 5px 20px rgba(139, 115, 85, 0.3);
        transition: all 0.3s ease;
  font-family: 'Poppins', Arial, sans-serif;
    }

    .price-badge.premium {
    background: linear-gradient(135deg, #d4a574 0%, #c49e26 100%);
        color: white;
    }

    .kunefe-card:hover .price-badge {
        transform: scale(1.1);
    }

    /* Responsive */
    @@media (max-width: 768px) {
    .page-title {
         font-size: 2.5rem;
     flex-direction: column;
            gap: 10px;
        }

  .page-title i {
    font-size: 2.5rem;
        }

        .page-header {
      padding: 35px 0;
            margin-bottom: 35px;
        }

        .kunefe-img-container {
         height: 300px;
        }

        .kunefe-title {
 font-size: 1.6rem;
}

   .kunefe-content {
   padding: 25px;
        }

    .price-badge {
    font-size: 1.3rem;
   padding: 12px 30px;
 }
    }

    @@media (max-width: 576px) {
 .page-title {
     font-size: 2rem;
        }

   .page-title i {
   font-size: 2rem;
  }

        .kunefe-img-container {
  height: 250px;
        }

        .kunefe-title {
font-size: 1.4rem;
        }

      .kunefe-description {
  font-size: 0.95rem;
        }

        .kunefe-content {
        padding: 20px;
        }

    .back-button {
        padding: 10px 25px;
 font-size: 0.95rem;
        }

        .price-badge {
    font-size: 1.2rem;
        padding: 10px 25px;
        }

     .feature-tag {
  font-size: 0.85rem;
  padding: 6px 12px;
    }
    }
</style>

