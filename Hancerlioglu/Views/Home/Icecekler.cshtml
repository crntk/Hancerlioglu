@{
    ViewData["Title"] = "İçecekler - HANCERLIOGLU";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #e8dfd2;
     font-family: 'Poppins', sans-serif;
    }

    .page-header {
     background: linear-gradient(135deg, rgba(232, 223, 210, 0.5) 0%, rgba(245, 237, 225, 0.5) 100%);
        padding: 50px 0;
    margin-bottom: 50px;
        border-bottom: 3px solid rgba(212, 165, 116, 0.3);
animation: fadeIn 0.8s ease;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-weight: 800;
        font-size: 3.5rem;
        text-align: center;
     color: #8b7355;
    margin-bottom: 20px;
      position: relative;
      animation: slideDown 0.8s ease;
  }

    .page-title i {
        margin-left: 15px;
 color: #d4a574;
}

    .page-subtitle {
        text-align: center;
        font-size: 1.2rem;
        color: #8b7355;
        font-weight: 500;
 margin-bottom: 20px;
     animation: fadeIn 1s ease;
    }

    .back-button {
 display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #8b7355 0%, #d4a574 100%);
    color: white;
        padding: 12px 30px;
        border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
   transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 5px 20px rgba(139, 115, 85, 0.3);
        border: none;
      font-size: 1rem;
    }

    .back-button:hover {
transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(139, 115, 85, 0.4);
     background: linear-gradient(135deg, #d4a574 0%, #8b7355 100%);
     color: white;
  }

 .back-button::before {
        content: '←';
        font-size: 1.2rem;
      transition: transform 0.3s ease;
    }

    .back-button:hover::before {
     transform: translateX(-5px);
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes slideDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }

 /* İçecek Kategorileri */
    .drinks-container {
        max-width: 1200px;
margin: 0 auto;
    }

.category-section {
    margin-bottom: 60px;
    }

    .category-title {
        font-family: 'Playfair Display', serif;
     font-weight: 700;
        font-size: 2.5rem;
        color: #8b7355;
        margin-bottom: 30px;
        padding-bottom: 15px;
    border-bottom: 3px solid rgba(212, 165, 116, 0.3);
        position: relative;
    }

    .category-title::before {
        content: '';
  position: absolute;
   bottom: -3px;
  left: 0;
        width: 100px;
     height: 3px;
      background: linear-gradient(90deg, #8b7355 0%, #d4a574 100%);
    }

    .category-title i {
   margin-right: 10px;
        color: #d4a574;
    }

    .drink-item {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
      box-shadow: 0 5px 20px rgba(139, 115, 85, 0.08);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
      justify-content: space-between;
 align-items: center;
        animation: fadeInUp 0.6s ease backwards;
    }

    .drink-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(139, 115, 85, 0.2);
    }

    .drink-info {
        flex: 1;
   display: flex;
        align-items: center;
        gap: 15px;
    }

    .drink-icon {
        font-size: 2.5rem;
        color: #d4a574;
 min-width: 50px;
      text-align: center;
    animation: float 3s ease-in-out infinite;
    }

    .drink-details {
   flex: 1;
    }

    .drink-name {
        font-size: 1.4rem;
   font-weight: 700;
        color: #8b7355;
        margin-bottom: 5px;
    }

    .drink-description {
        font-size: 0.95rem;
        color: #6b5d4f;
        margin-bottom: 0;
 }

    .drink-price {
        font-size: 1.5rem;
        font-weight: 800;
        color: #8b7355;
        padding: 10px 25px;
 background: rgba(212, 165, 116, 0.1);
        border-radius: 20px;
border: 2px solid rgba(212, 165, 116, 0.3);
        white-space: nowrap;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
   50% { transform: translateY(-10px); }
    }

 @@keyframes fadeInUp {
     from { opacity: 0; transform: translateY(30px); }
   to { opacity: 1; transform: translateY(0); }
 }

    /* Animasyon Gecikmeleri */
    .drink-item:nth-child(1) { animation-delay: 0.1s; }
    .drink-item:nth-child(2) { animation-delay: 0.2s; }
    .drink-item:nth-child(3) { animation-delay: 0.3s; }
    .drink-item:nth-child(4) { animation-delay: 0.4s; }
    .drink-item:nth-child(5) { animation-delay: 0.5s; }
    .drink-item:nth-child(6) { animation-delay: 0.6s; }
  .drink-item:nth-child(7) { animation-delay: 0.7s; }
    .drink-item:nth-child(8) { animation-delay: 0.8s; }
    .drink-item:nth-child(9) { animation-delay: 0.9s; }
  .drink-item:nth-child(10) { animation-delay: 1.0s; }
    .drink-item:nth-child(11) { animation-delay: 1.1s; }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title { font-size: 2.5rem; }
        .page-header { padding: 35px 0; margin-bottom: 35px; }
 .category-title { font-size: 2rem; }
        .drink-item {
   flex-direction: column;
            text-align: center;
            gap: 15px;
        }
        .drink-info {
     flex-direction: column;
            text-align: center;
        }
        .drink-icon { margin-right: 0; margin-bottom: 10px; }
        .drink-price { margin-top: 10px; }
    }

    @@media (max-width: 576px) {
        .page-title { font-size: 2rem; }
        .category-title { font-size: 1.7rem; }
     .drink-name { font-size: 1.2rem; }
        .drink-description { font-size: 0.9rem; }
        .drink-price { font-size: 1.3rem; padding: 8px 20px; }
        .back-button { padding: 10px 25px; font-size: 0.95rem; }
        .drink-icon { font-size: 2rem; }
    }
</style>

