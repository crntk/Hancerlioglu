@{
    ViewData["Title"] = "Baklava Çeşitleri";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #fff8f0;
        font-family: 'Segoe UI', sans-serif;
    }

    .dessert-card {
        border-radius: 15px;
        overflow: hidden;
        transition: 0.3s;
        background: #fff3e0;
        border: 1px solid #ffd699;
        margin-bottom: 20px;
    }

        .dessert-card:hover {
            transform: scale(1.03);
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

    .dessert-card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 15px;
        display: block;
    }

    .badge {
        font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .dessert-card img {
            height: 200px;
        }

        .badge {
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 576px) {
        .dessert-card img {
            height: 180px;
        }

        .badge {
            font-size: 0.8rem;
        }
    }
</style>

<div class="container mt-4">
    <h1 class="text-center mb-4">Baklava Çeşitleri</h1>
    <a href="/Home/Index" class="btn btn-dark mb-3">← Ana Menüye Dön</a>

