@{
    ViewData["Title"] = "Baklava Çeşitleri - HANÇERLİOĞLU";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #e8dfd2;
        font-family: 'Poppins', sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, rgba(232, 223, 210, 0.5) 0%, rgba(245, 237, 225, 0.5) 100%);
     padding: 50px 0;
        margin-bottom: 50px;
  border-bottom: 3px solid rgba(212, 165, 116, 0.3);
      animation: fadeIn 0.8s ease;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
      font-weight: 800;
  font-size: 3.5rem;
        text-align: center;
        color: #8b7355;
        margin-bottom: 20px;
        position: relative;
        animation: slideDown 0.8s ease;
    }

        .page-title::after {
     content: '🥐';
 margin-left: 15px;
        }

 .back-button {
  display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #8b7355 0%, #d4a574 100%);
        color: white;
        padding: 12px 30px;
    border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 5px 20px rgba(139, 115, 85, 0.3);
        border: none;
     font-size: 1rem;
    }

 .back-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(139, 115, 85, 0.4);
    background: linear-gradient(135deg, #d4a574 0%, #8b7355 100%);
       color: white;
    }

        .back-button::before {
 content: '←';
     font-size: 1.2rem;
    transition: transform 0.3s ease;
        }

        .back-button:hover::before {
          transform: translateX(-5px);
        }

    @@keyframes fadeIn {
    from {
            opacity: 0;
        }
        to {
    opacity: 1;
      }
    }

 @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
 opacity: 1;
      transform: translateY(0);
        }
  }

    /* Ürün Kartları */
    .product-card {
   position: relative;
        border-radius: 20px;
        overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        border: none;
        box-shadow: 0 8px 30px rgba(139, 115, 85, 0.08);
        margin-bottom: 30px;
        animation: fadeInUp 0.8s ease backwards;
    }

    .product-card:nth-child(1) { animation-delay: 0.1s; }
     .product-card:nth-child(2) { animation-delay: 0.2s; }
        .product-card:nth-child(3) { animation-delay: 0.3s; }
        .product-card:nth-child(4) { animation-delay: 0.4s; }
 .product-card:nth-child(5) { animation-delay: 0.5s; }
        .product-card:nth-child(6) { animation-delay: 0.6s; }

    @@keyframes fadeInUp {
 from {
            opacity: 0;
            transform: translateY(30px);
  }
        to {
       opacity: 1;
            transform: translateY(0);
        }
    }

    .product-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 18px 50px rgba(139, 115, 85, 0.25);
    }

    .product-img-container {
        position: relative;
        overflow: hidden;
  height: 280px;
    }

    .product-img {
        width: 100%;
        height: 100%;
  object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .product-card:hover .product-img {
      transform: scale(1.15);
    }

  .product-overlay {
        position: absolute;
    top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 0%, rgba(107, 93, 79, 0.6) 100%);
      opacity: 0;
      transition: opacity 0.4s ease;
      display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
  }

    .view-details {
    color: white;
        font-size: 1.1rem;
      font-weight: 600;
        background: rgba(212, 165, 116, 0.9);
     padding: 12px 30px;
        border-radius: 25px;
        transform: translateY(20px);
        opacity: 0;
      transition: all 0.4s ease;
    }

 .product-card:hover .view-details {
  transform: translateY(0);
      opacity: 1;
    }

    .product-content {
     padding: 25px;
        text-align: center;
 }

    .product-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #8b7355;
  margin-bottom: 15px;
        transition: color 0.3s ease;
    }

    .product-card:hover .product-title {
color: #d4a574;
    }

    .price-badge {
        display: inline-block;
   padding: 10px 25px;
 border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        box-shadow: 0 4px 15px rgba(139, 115, 85, 0.2);
      transition: all 0.3s ease;
    }

        .price-badge.premium {
            background: linear-gradient(135deg, #8b7355 0%, #6b5d4f 100%);
        }

.price-badge.standard {
 background: linear-gradient(135deg, #a68968 0%, #8b7355 100%);
        }

        .price-badge.special {
background: linear-gradient(135deg, #d4a574 0%, #c49e26 100%);
            color: white;
        }

    .product-card:hover .price-badge {
      transform: scale(1.1);
    }

    /* Best Seller Badge */
    .bestseller-badge {
        position: absolute;
        top: 15px;
        right: 15px;
   background: linear-gradient(135deg, #d4a574 0%, #8b7355 100%);
        color: white;
        padding: 8px 18px;
  border-radius: 20px;
        font-size: 0.8rem;
      font-weight: 700;
        letter-spacing: 1px;
        z-index: 10;
        box-shadow: 0 4px 15px rgba(212, 165, 116, 0.3);
        animation: pulse 2s ease infinite;
    }

    @@keyframes pulse {
  0%, 100% {
            transform: scale(1);
        }
        50% {
   transform: scale(1.05);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
      font-size: 2.5rem;
        }

        .page-header {
padding: 35px 0;
        margin-bottom: 35px;
        }

   .product-img-container {
     height: 240px;
        }

   .product-title {
      font-size: 1.3rem;
        }

        .price-badge {
    font-size: 1rem;
            padding: 8px 20px;
        }
    }

  @@media (max-width: 576px) {
        .page-title {
    font-size: 2rem;
        }

        .product-img-container {
       height: 220px;
}

      .product-content {
            padding: 20px;
        }

        .back-button {
     padding: 10px 25px;
            font-size: 0.95rem;
        }
    }
</style>

