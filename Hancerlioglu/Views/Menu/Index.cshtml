@{
    ViewData["Title"] = "Tatlı Menüsü";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .dessert-card {
        border-radius: 15px;
        overflow: hidden;
        transition: 0.3s;
    }
    .dessert-card:hover {
        transform: scale(1.04);
        box-shadow: 0 5px 20px rgba(0,0,0,0.2);
    }
    .dessert-img {
        height: 180px;
        object-fit: cover;
    }
</style>

<div class="container mt-4">
    <h1 class="text-center mb-4">🍨 Tatlı Menüsü</h1>

    <div class="row g-4">

        <!-- Baklava -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1600756424627-2f2e3a5ec1b2" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Baklava</h5>
                    <p class="card-text">Cevizli veya fıstıklı, taze günlük üretim.</p>
                    <span class="badge bg-warning text-dark">45 TL</span>
                </div>
            </div>
        </div>

        <!-- Künefe -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1634562347138-6a756d1fcac7" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Künefe</h5>
                    <p class="card-text">Tel kadayıf ve tuzlu peynir ile sıcak servis.</p>
                    <span class="badge bg-warning text-dark">55 TL</span>
                </div>
            </div>
        </div>

        <!-- Sütlaç -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1613470201437-a8f24e0df2fe" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Sütlaç</h5>
                    <p class="card-text">Fırınlanmış, üzeri hafif karamelize lezzet.</p>
                    <span class="badge bg-warning text-dark">22 TL</span>
                </div>
            </div>
        </div>

        <!-- Cheesecake -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1519869325930-281384150729" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Cheesecake</h5>
                    <p class="card-text">Orman meyveli sos ile nefis cheesecake.</p>
                    <span class="badge bg-warning text-dark">40 TL</span>
                </div>
            </div>
        </div>

        <!-- Profiterol -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1541781774459-bb2af2f05b55" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Profiterol</h5>
                    <p class="card-text">Çikolata soslu nefis profiteroller.</p>
                    <span class="badge bg-warning text-dark">28 TL</span>
                </div>
            </div>
        </div>

        <!-- Trileçe -->
        <div class="col-md-4">
            <div class="card dessert-card">
                <img src="https://images.unsplash.com/photo-1630346575553-3104b232625e" class="card-img-top dessert-img" />
                <div class="card-body">
                    <h5 class="card-title">Trileçe</h5>
                    <p class="card-text">Üç sütlü karamelize eşsiz tat.</p>
                    <span class="badge bg-warning text-dark">35 TL</span>
                </div>
            </div>
        </div>

    </div>
</div>
