<!DOCTYPE html>
<html lang="tr">
<head>
 <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="no-referrer" />
    <title>@ViewData["Title"] - Hancerlioglu</title>
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    
    <!-- Critical CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hancerlioglu.styles.css" asp-append-version="true" />

    <!-- Defer non-critical CSS -->
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"></noscript>
    
    <!-- Fonts with display swap -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800;900&family=Playfair+Display:wght@700;800;900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800;900&family=Playfair+Display:wght@700;800;900&display=swap" rel="stylesheet"></noscript>

    <style>
        /* Critical inline CSS - minimal */
        body {
     position: relative !important;
 overflow-x: hidden;
  background: linear-gradient(135deg, #fff8f0 0%, #ffe8d6 30%, #fff8f0 60%, #ffe8d6 100%) !important;
            background-size: 400% 400% !important;
            /* Slow or remove animation to reduce paint cost */
            animation: gradientShift 120s linear infinite !important;
        }
        
        @@keyframes gradientShift {
            0% { background-position: 0 50%; }
50% { background-position: 100% 50%; }
            100% { background-position: 0 50%; }
        }

 /* Amblemin üzerine gelmemesi için z-index */
  .logo-container, .logo-img {
 position: relative !important;
      z-index: 10 !important;
        }

        .container, main {
            position: relative !important;
            z-index: 5 !important;
        }

        /* Footer - Krem/Bej Tema */
        .footer {
            background: linear-gradient(135deg, #e8dfd2 0%, #f5ede1 50%, #e8dfd2 100%) !important;
        color: #6b5d4f !important;
border-top: 3px solid #d4a574 !important;
       padding: 20px 0;
            box-shadow: 0 -4px 15px rgba(212,165,116,0.15);
     }

    .footer .text-muted {
     color: #8b7355 !important;
            font-weight: 500;
      }

        .footer a {
        color: #8b7355 !important;
            transition: all 0.3s ease;
        }

        .footer a:hover {
            color: #d4a574 !important;
        }

        /* Desktop Social Bar (SAĞ TARAF) */
        .social-bar {
    position: fixed;
    right: 20px;
   top: 50%;
     transform: translateY(-50%);
            z-index: 1000;
   display: flex;
  flex-direction: column;
       gap: 15px;
        }

        .social-icon {
            display: flex;
            align-items: center;
          justify-content: center;
      width: 50px;
            height: 50px;
      background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            color: #333;
          font-size: 20px;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-decoration: none;
   cursor: pointer;
            border: none;
    }

        .social-icon:hover {
            transform: translateX(-5px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.18);
        }

        .social-icon.facebook {
            background: linear-gradient(135deg, #8b7355 0%, #6b5d4f 100%) !important;
         color: white !important;
 }

        .social-icon.instagram {
 background: linear-gradient(135deg, #a68968 0%, #8b7355 100%) !important;
    color: white !important;
   }

        .social-icon.phone {
            background: linear-gradient(135deg, #d4a574 0%, #c49e26 100%) !important;
    color: white !important;
        }

        .social-icon.location {
         background: linear-gradient(135deg, #7a6b5a 0%, #6b5d4f 100%) !important;
     color: white !important;
        }

 .social-icon.menu {
            background: linear-gradient(135deg, #8b7355 0%, #7a6b5a 100%) !important;
  color: white !important;
     }

.social-icon.home {
  background: linear-gradient(135deg, #f5c76a 0%, #d4a574 100%) !important;
       color: white !important;
    }

        /* Mobile Social Buttons (Sağ Alt) */
        .fixed-social-buttons {
   display: none;
        }

        /* Telefon Popup Stilleri */
    .phone-popup {
         position: fixed;
    top: 0;
  left: 0;
            width: 100%;
       height: 100%;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(5px);
            display: none;
            align-items: center;
  justify-content: center;
            z-index: 10000;
            animation: fadeIn 0.3s ease;
        }

        .phone-popup.active {
            display: flex;
      }

        @@keyframes fadeIn {
            from { opacity: 0; }
 to { opacity: 1; }
        }

    .phone-popup-content {
      background: white;
            border-radius: 20px;
            padding: 30px;
         box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 400px;
 width: 90%;
            position: relative;
        animation: slideUp 0.3s ease;
 }

        @@keyframes slideUp {
            from {
 opacity: 0;
    transform: translateY(50px);
            }
     to {
        opacity: 1;
transform: translateY(0);
            }
        }

        .phone-popup-close {
       position: absolute;
            top: 15px;
    right: 15px;
 background: rgba(0, 0, 0, 0.1);
   border: none;
            width: 35px;
        height: 35px;
       border-radius: 50%;
       cursor: pointer;
            display: flex;
            align-items: center;
       justify-content: center;
   font-size: 18px;
            color: #333;
            transition: all 0.3s ease;
   }

        .phone-popup-close:hover {
 background: rgba(0, 0, 0, 0.2);
          transform: rotate(90deg);
        }

    .phone-popup-header {
          text-align: center;
   margin-bottom: 25px;
     }

 .phone-popup-header i {
            font-size: 3rem;
       color: #25D366;
    margin-bottom: 15px;
        }

   .phone-popup-header h3 {
            font-size: 1.5rem;
          font-weight: 700;
  color: #8b4513;
        margin: 0;
        }

        .phone-popup-body {
         text-align: center;
 }

     .phone-number {
      font-size: 2rem;
      font-weight: 700;
    color: #8b4513;
        margin-bottom: 20px;
            letter-spacing: 2px;
         padding: 15px;
            background: linear-gradient(135deg, #fff8f0 0%, #ffe8d6 100%);
            border-radius: 12px;
       border: 2px solid #d4a574;
     }

        .copy-btn {
         display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 30px;
       background: linear-gradient(135deg, #d4a574 0%, #f5c76a 100%);
        color: #8b4513;
        border: none;
  border-radius: 25px;
    font-size: 1.1rem;
       font-weight: 600;
    cursor: pointer;
     transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(212,165,116,0.3);
    }

        .copy-btn:hover {
        transform: translateY(-3px);
box-shadow: 0 8px 25px rgba(212,165,116,0.5);
        }

        .copy-success {
         display: none;
            margin-top: 15px;
       color: #25D366;
       font-weight: 600;
            font-size: 1.1rem;
     animation: bounceIn 0.5s ease;
      }

        .copy-success.show {
            display: block;
     }

        @@keyframes bounceIn {
       0% {
           opacity: 0;
  transform: scale(0.3);
        }
            50% {
   opacity: 1;
             transform: scale(1.05);
 }
   70% {
              transform: scale(0.9);
       }
  100% {
         transform: scale(1);
    }
        }

.copy-success i {
  font-size: 1.3rem;
        }

        /* Responsive */
      @@media (max-width: 768px) {
    .social-bar {
     display: none;
        }
   
       .fixed-social-buttons {
   display: flex;
           position: fixed;
           right: 20px; /* same as desktop */
   top: 50%;
     transform: translateY(-50%);
   z-index: 1000;
  flex-direction: column;
      gap: 15px;
 }

         /* Use same visuals as desktop .social-icon */
         .fixed-social-buttons .social-icon,
 .fixed-social-buttons a.social-icon,
 .fixed-social-buttons button.social-icon {
 display: flex;
 align-items: center;
 justify-content: center;
 width:50px;
 height:50px;
 background: rgba(255,255,255,0.9);
 border-radius:50%;
 color: #333;
 font-size:20px;
 transition: all 0.3s ease;
 box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
 text-decoration: none;
 cursor: pointer;
 border: none;
 }
 
 .fixed-social-buttons .social-icon:hover {
 transform: translateX(-5px);
 box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
 }
 
 /* Per-button gradients matching desktop */
 .fixed-social-buttons .facebook { background: linear-gradient(135deg, #8b73550%, #6b5d4f100%) !important; color: white !important; }
 .fixed-social-buttons .instagram { background: linear-gradient(135deg, #a689680%, #8b7355100%) !important; color: white !important; }
 .fixed-social-buttons .phone { background: linear-gradient(135deg, #d4a5740%, #c49e26100%) !important; color: white !important; }
 .fixed-social-buttons .location { background: linear-gradient(135deg, #7a6b5a0%, #6b5d4f100%) !important; color: white !important; }
 .fixed-social-buttons .menu { background: linear-gradient(135deg, #8b73550%, #7a6b5a100%) !important; color: white !important; }
 .fixed-social-buttons .home { background: linear-gradient(135deg, #f5c76a0%, #d4a574100%) !important; color: white !important; }

 .phone-popup-content {
 padding:25px;
 }

 .phone-number {
 font-size:1.5rem;
 }

 .phone-popup-header i {
 font-size:2.5rem;
 }
 }

        /* Desktop'ta mobil butonları gizle */
        @@media (min-width: 769px) {
 .fixed-social-buttons {
display: none !important;
          }
        }
    </style>
</head>
<body>
    <header>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
  </main>
    </div>

    <!-- Desktop Social Bar (Sol Taraf) -->
    <div class="social-bar">
        <a href="/Home/Anasayfa" class="social-icon home" aria-label="Ana Sayfa">
 <i class="fas fa-home"></i>
  </a>
        <a href="https://www.facebook.com/profile.php?id=61585290026850" target="_blank" rel="noopener noreferrer" class="social-icon facebook" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
      </a>
      <button type="button" data-instagram="https://www.instagram.com/gaziantepli_hancerlioglu/" class="social-icon instagram" aria-label="Instagram">
     <i class="fab fa-instagram"></i>
        </button>
     <a href="#" id="phoneButton" class="social-icon phone" aria-label="Telefon">
  <i class="fas fa-phone-alt"></i>
        </a>
    <a href="https://www.google.com/maps?q=36.611389,34.305528" target="_blank" rel="noopener noreferrer" class="social-icon location" aria-label="Konum">
            <i class="fas fa-map-marker-alt"></i>
        </a>
  <a href="/Home/Index" class="social-icon menu" aria-label="Menü">
        <i class="fas fa-utensils"></i>
        </a>
    </div>

    <!-- Mobile Fixed Social Buttons (Sağ Alt) - always rendered to match desktop on all pages -->
    <div class="fixed-social-buttons">
<a href="/Home/AnaSayfa" class="social-icon home" aria-label="Ana Sayfa">
 <i class="fas fa-home"></i>
 </a>
 <a href="https://www.facebook.com/profile.php?id=61585290026850" target="_blank" rel="noopener noreferrer" class="social-icon facebook" aria-label="Facebook">
 <i class="fab fa-facebook-f"></i>
 </a>
 <button type="button" data-instagram="https://www.instagram.com/gaziantepli_hancerlioglu/" class="social-icon instagram" aria-label="Instagram">
 <i class="fab fa-instagram"></i>
 </button>
<button id="phoneButtonMobile" class="social-icon phone" aria-label="Telefon">
 <i class="fas fa-phone-alt"></i>
 </button>
 <a href="https://www.google.com/maps?q=36.611389,34.305528" target="_blank" rel="noopener noreferrer" class="social-icon location" aria-label="Konum">
 <i class="fas fa-map-marker-alt"></i>
 </a>
 <a href="/Home/Index" class="social-icon menu" aria-label="Menü">
 <i class="fas fa-utensils"></i>
 </a>
 </div>

    <!-- Telefon Popup HTML -->
    <div id="phonePopup" class="phone-popup">
        <div class="phone-popup-content">
            <button id="closePopup" class="phone-popup-close" aria-label="Kapat">&times;</button>
 <div class="phone-popup-header">
 <i class="fas fa-phone-alt"></i>
 <h3>Bize Ulaşın</h3>
 </div>
 <div class="phone-popup_body">
 <div id="phoneNumber" class="phone-number">05414184976</div>
 <button id="copyButton" class="copy-btn">
 <i class="fas fa-copy"></i> Numarayı Kopyala
 </button>
 <div id="copySuccess" class="copy-success">
 <i class="fas fa-check-circle"></i> Kopyalandı!
 </div>
 </div>
 </div>
 </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HANÇERLİOĞLU
        </div>
    </footer>

    <!-- Scripts at bottom for better performance -->
    <script src="~/js/cache-buster.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
 // Telefon Popup - Desktop
const phoneButton = document.getElementById('phoneButton');
 const phonePopup = document.getElementById('phonePopup');
            const closePopup = document.getElementById('closePopup');
  const copyButton = document.getElementById('copyButton');
        const phoneNumber = document.getElementById('phoneNumber');
   const copySuccess = document.getElementById('copySuccess');
            
   if (phoneButton) {
    phoneButton.addEventListener('click', function(e) {
     e.preventDefault();
        phonePopup.classList.add('active');
         });
       }
            
        // Telefon Popup - Mobile
  const phoneButtonMobile = document.getElementById('phoneButtonMobile');
   if (phoneButtonMobile) {
                phoneButtonMobile.addEventListener('click', function() {
              phonePopup.classList.add('active');
  });
            }
            
    if (closePopup) {
closePopup.addEventListener('click', function() {
           phonePopup.classList.remove('active');
        copySuccess.classList.remove('show');
         });
     }
     
         if (phonePopup) {
           phonePopup.addEventListener('click', function(e) {
               if (e.target === phonePopup) {
   phonePopup.classList.remove('active');
 copySuccess.classList.remove('show');
    }
           });
            }
        
            if (copyButton) {
      copyButton.addEventListener('click', function() {
        const number = phoneNumber.textContent;
            navigator.clipboard.writeText(number).then(function() {
   copySuccess.classList.add('show');
         setTimeout(function() {
         copySuccess.classList.remove('show');
       }, 3000);
    });
       });
            }

            // Instagram Güvenli Açılış - Tüm Instagram butonları için
   const instagramButtons = document.querySelectorAll('[data-instagram]');
            instagramButtons.forEach(function(btn) {
             btn.addEventListener('click', function(e) {
 e.preventDefault();
  const instagramUrl = this.getAttribute('data-instagram');
             // Yeni sekmede aç ama referrer bilgisi göndermeden
 const newWindow = window.open('', '_blank');
 if (newWindow) {
   newWindow.opener = null;
             newWindow.location.href = instagramUrl;
         }
             });
    });
        });
  </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
